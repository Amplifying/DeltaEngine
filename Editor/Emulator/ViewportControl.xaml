<UserControl
	x:Class="DeltaEngine.Editor.Emulator.ViewportControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="500"
	MinHeight="300" MinWidth="300">

	<UserControl.Resources>

		<Style TargetType="Label" x:Key="DeltaLabel">
			<Setter Property="FontSize" Value="16" />
			<Setter Property="FontFamily" Value="Arial" />
			<Setter Property="FontStyle" Value="Normal" />
			<Setter Property="Background" Value="#e2e2e2" />
			<Setter Property="Foreground" Value="#FF5D5D5D" />
		</Style>

		<Style TargetType="TextBox" x:Key="DeltaTextBox">
			<Setter Property="FontSize" Value="16" />
			<Setter Property="FontFamily" Value="Arial" />
			<Setter Property="FontStyle" Value="Normal" />
			<Setter Property="Background" Value="#FFFBFBFB" />
			<Setter Property="Foreground" Value="#FF5D5D5D" />
			<Setter Property="BorderBrush" Value="{x:Null}" />
		</Style>

		<Style TargetType="ComboBox" x:Key="DeltaComboBox">
			<Setter Property="FontSize" Value="16" />
			<Setter Property="FontFamily" Value="Arial" />
			<Setter Property="FontStyle" Value="Normal" />
			<Setter Property="Background" Value="#FFFBFBFB" />
			<Setter Property="Foreground" Value="#FF5D5D5D" />
		</Style>

		<Style TargetType="ListBox" x:Key="DeltaListBox">
			<Setter Property="FontSize" Value="16" />
			<Setter Property="FontFamily" Value="Arial" />
			<Setter Property="FontStyle" Value="Normal" />
			<Setter Property="Background" Value="#FFFBFBFB" />
			<Setter Property="Foreground" Value="#FF5D5D5D" />
		</Style>

		<Style TargetType="Button" x:Key="DeltaButton">
			<Setter Property="FontSize" Value="16" />
			<Setter Property="FontFamily" Value="Arial" />
			<Setter Property="FontStyle" Value="Normal" />
			<Setter Property="Background" Value="#FF9C9C9C" />
			<Setter Property="Foreground" Value="#FFFFFFFF" />
		</Style>

		<Style TargetType="RadioButton" x:Key="DeltaRadioButton">
			<Setter Property="FontSize" Value="16" />
			<Setter Property="FontFamily" Value="Arial" />
			<Setter Property="FontStyle" Value="Normal" />
			<Setter Property="Foreground" Value="#FF5D5D5D" />
		</Style>

		<Style TargetType="CheckBox" x:Key="DeltaCheckBox">
			<Setter Property="FontSize" Value="16" />
			<Setter Property="FontFamily" Value="Arial" />
			<Setter Property="FontStyle" Value="Normal" />
			<Setter Property="Foreground" Value="#FF5D5D5D" />
		</Style>

	</UserControl.Resources>

	<Grid>
		<Grid Width="140" HorizontalAlignment="Left" Visibility="Hidden">
			<Grid.RowDefinitions>
				<RowDefinition Height="20" />
				<RowDefinition Height="*" />
				<RowDefinition Height="20" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<TextBlock Grid.Row="0" Text="Toolbox" />

			<ListBox Grid.Row="1">
				<Grid Width="126" HorizontalAlignment="Left" Visibility="Visible">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="40" />
						<ColumnDefinition Width="2" />
						<ColumnDefinition Width="40" />
						<ColumnDefinition Width="2" />
						<ColumnDefinition Width="40" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="30" />
						<RowDefinition Height="2" />
						<RowDefinition Height="30" />
						<RowDefinition Height="2" />
						<RowDefinition Height="30" />
						<RowDefinition Height="2" />
						<RowDefinition Height="30" />
						<RowDefinition Height="2" />
						<RowDefinition Height="30" />
						<RowDefinition Height="2" />
						<RowDefinition Height="30" />
					</Grid.RowDefinitions>
					<Button 
						PreviewMouseMove="DragButton"
						FontSize="18" Style="{StaticResource DeltaButton}"
						ToolTip="Create Button"
						Grid.Row="0" Grid.Column="0" 
						Background="#FFE2E2E2" Height="30"
						VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="29">
							<Image Height="25" Width="25" Source="../Images/UIEditor/CreateButton.png" Stretch="Fill" />
					</Button>

					<Button
						PreviewMouseMove="DragImage"
						FontSize="18" Style="{StaticResource DeltaButton}"
						ToolTip="Create Image"
						Grid.Row="0" Grid.Column="2" 
						Background="#FFE2E2E2" Height="30" HorizontalAlignment="Center"
						VerticalAlignment="Bottom" Width="29">
							<Image Height="25" Width="25" Source="../Images/UIEditor/CreateImage.png" Stretch="Fill" />
					</Button>

					<Button
						PreviewMouseMove="DragLabel"
						FontSize="18" Style="{StaticResource DeltaButton}"
						ToolTip="Create Label"
						Grid.Row="0" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="29" Height="30"
						Margin="0,0,0,0" Background="#FFE2E2E2">
							<Image Height="25" Width="25" Source="../Images/UIEditor/CreateLabel.png" Stretch="Fill" />
					</Button>
				</Grid>
			</ListBox>
			
			<TextBlock Grid.Row="2" Text="Hierarchy" />

			<ListBox Grid.Row="3" Margin="1,0,0,0" ItemsSource="{Binding Path=UIImagesInList}" SelectedItem="{Binding Path=SelectedSpriteNameInList}"
			         SelectedIndex="{Binding Path=SpriteListIndex}" SelectionChanged="ListBox_SelectionChanged" />
		</Grid>
		<Grid Height="160" VerticalAlignment="Bottom" Visibility="Visible">
			<!--TODO: graph-->
		</Grid>
		<Grid Margin="0,0,0,160">
			<WindowsFormsHost Name="ViewportHost" x:FieldModifier="public" />
		</Grid>
	</Grid>
</UserControl>