			ToolTip="Button"
			Grid.Row="11" Margin="0,0,28,0" Grid.ColumnSpan="2" Grid.Column="1">
				<Button.Background>
					<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
						<GradientStop Color="#FFB2B2B2" Offset="0" />
